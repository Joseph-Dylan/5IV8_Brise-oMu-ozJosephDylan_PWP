<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gato de Gatos</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div class="game-header">
            <h1>Gato de Gatos</h1>
            <a href="/games/new" class="btn btn-primary">Nuevo Juego</a>
        </div>

        <div class="games-list">
            <h2>Juegos Guardados</h2>
            <% if (games.length === 0) { %>
                <p class="no-games">No hay juegos guardados</p>
            <% } else { %>
                <table class="games-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Jugador X</th>
                            <th>Jugador O</th>
                            <th>Puntuación</th>
                            <th>Subjuegos</th>
                            <th>Ganador</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% games.forEach(game => { %>
                            <tr>
                                <td><%= game.id %></td>
                                <td><%= new Date(game.created_at).toLocaleDateString() %></td>
                                <td><%= game.player_x_name %></td>
                                <td><%= game.player_o_name %></td>
                                <td><%= game.player_x_score %> - <%= game.player_o_score %></td>
                                <td><%= game.completed_sub_games || 0 %>/9</td>
                                <td>
                                    <% if (game.winner) { %>
                                        <% 
                                            // Determinar la clase CSS basada en el ganador
                                            let winnerClass = '';
                                            if (game.winner === game.player_x_name) {
                                                winnerClass = 'winner-x';
                                            } else if (game.winner === game.player_o_name) {
                                                winnerClass = 'winner-o';
                                            } else if (game.winner === 'Draw') {
                                                winnerClass = 'winner-draw';
                                            }
                                        %>
                                        <span class="winner <%= winnerClass %>">
                                            <%= game.winner %>
                                        </span>
                                    <% } else { %>
                                        En juego
                                    <% } %>
                                </td>
                                <td>
                                    <span class="status <%= game.completed ? 'completed' : 'in-progress' %>">
                                        <%= game.completed ? 'Completado' : 'En progreso' %>
                                    </span>
                                </td>
                                <td class="actions">
                                    <a href="/game/<%= game.id %>" class="btn btn-small">Continuar</a>
                                    <a href="/games/delete/<%= game.id %>" class="btn btn-small btn-danger" 
                                       onclick="return confirm('¿Eliminar este juego?')">Eliminar</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
    
    <footer></footer>
</body>
</html>